<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">  <!-- スマホで表示できるように、container から container-fluidに変更-->
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li>
          <%= link_to "NAMI LOG", root_path,data: {"turbolinks" => false} , id: "logo" %> </li>
      </ul>
      <ul class="nav navbar-nav navbar-right" >
        <% if logged_in? %><!--ログインされていたら表示する-->
          <li class="dropdown">
            <!-- 現在の波情報(Yahoo!波情報)へ飛ぶリンク-->
            <li><%= link_to "いまなみ", 'https://weather.yahoo.co.jp/weather/wave/', :target=>["_blank"] %></li>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              メニュー <!--<b class="caret"></b>-->
              <span class="icon-bar"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "ポイントリストへ", root_path ,data: {"turbolinks" => false} %></li> <!--ポイントリストへ行く-->
              <li class="divider"></li>
              <li><%= link_to "使い方", explain_explain_path %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %><!--ログインされていなかったら表示する-->
          <!--ヘッダーの大きさを(ログイン,ログアウトで)統一するために-->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="visibility: hidden;">
              テキスト<!--visibility: hidden; にしているため表示されない--> 
            </a>
          </li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
