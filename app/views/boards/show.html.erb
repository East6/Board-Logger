<html>
  <head>
    <title><%= @board.location %>のサーフポイント</title>
    <%= stylesheet_link_tag "boards", :media => "all" %>
  </head>

  <body>
    <div class="container-fluid"> <!--Bootstrapのグリッドシステムの対象範囲-->
    <div class="box11">

      <h1 style="margin-left: 20px;"><%= @board.location %></h1>

      <!--<%= link_to "GoogleMapへGo","https://www.google.com/maps/dir/?api=1&destination=" + @board.latitude.to_s + "," + @board.longitude.to_s,:target=>["_blank"] %>-->

      <!--https://www.google.com/maps/dir/?api=1&origin=26.253320499999997,127.76594870000001&destination=26.253320499999997,127.76594870000001-->
      <%= link_to "GoogleMapへGo","https://www.google.com/maps/dir/?api=1&origin="+ <id = "latitude"> +","+ <id = "longitude"> + "&destination=" + @board.latitude.to_s + "," + @board.longitude.to_s,:target=>["_blank"] %>

      <%=確かめ%>


      <!-- google mapを表示する場所> -->
      <div id="gmap" style="width: 100%; height: 300px;"></div>

      <!-- google mapを表示するためのJS -->
      <script>
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'gmap'}}, function(){
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      </script>
      <p><button onclick="geoFindMe()">Show my location</button></p>
      <div id="out"></div>
      <% if @user == current_user %>
        <%= render 'shared/can_edit_board' %>
      <% else %>
        <%= render 'shared/cannot_edit_board' %>
      <% end %>


      <p>
        <%= link_to "戻る", root_path %>
      </p>
    </div>

  </div><!--Bootstrapのグリッドシステムの対象範囲-->
  </body>
</html>
