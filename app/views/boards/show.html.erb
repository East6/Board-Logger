<html>
  <head>
    <title><%= @board.location %>のサーフポイント</title>
  </head>

  <body>
    <div class="box11">

      <h1 style="margin-left: 20px;"><%= @board.location %></h1>

      <!-- google mapを表示する場所> -->
      <div id="gmap" style="width: 100%; height: 300px;"></div>

      <!-- google mapを表示するためのJS -->
      <script>
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'gmap'}}, function(){
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      </script>

      <!-- google mapを表示するための住所入力フォーム -->
      <%= form_for @newMap, :url => gmap_create_path do |form| %>
        <div class="form-inline" style="margin-top: 15px;">
          <%= form.label "住所" %>
          <%= form.text_field :address, class: "form-control mb-2 mr-sm-2" %>
          <%= form.hidden_field :board_id %>
          <%= form.submit "google Mapを表示", class: "btn btn-primary mb-2"%>
        </div>
      <% end %>

    <!-- 波情報を入力するための入力フォーム -->
    <h3 style="margin-left: 100px;">波情報</h3>
    <%= form_for @newWave, :url => wave_create_path do |f| %>
      <div class="form-inline">
        <%=f.label "情報"%>
        <%= f.text_field :status, class: "form-control mb-2 mr-sm-2"%>
        <%= f.label "コメント" %>
        <%= f.text_field :comment, class: "form-control mb-2 mr-sm-2"%>
        <%= f.hidden_field :board_id %>
        <%= f.submit "投稿" , class: "btn btn-primary mb-2"%>
      </div>
    <% end %>

    <!-- 波情報を出力するためのテーブル -->
      <table class="table table-bordered">
        <tr>
          <th>波情報</th>
          <th>コメント</th>
        </tr>

        <% @wave.each do |wave| %>
          <tr>
            <td><%= wave.status %></td>
            <td><%= wave.comment %></td>
          </tr>
        <% end %>
      </table>

      <!-- サーフポイントの雰囲気を入力するための入力フォーム -->
      <h3 style="margin-left: 100px;">サーフポイントの雰囲気</h3>
      <%= form_for @newMood, :url => mood_create_path do |f| %>
        <div class="form-inline">
          <%= f.text_field :mood, class: "form-control mb-2 mr-sm-2" %>
          <%= f.hidden_field :board_id %>
          <%= f.submit "編集", class: "btn btn-primary mb-2"%>
        </div>
      <% end %>

        <!-- サーフポイントの雰囲気を出力するためのテーブル -->
          <table class="table table-bordered">
            <tr>
              <th>サーフポイントの雰囲気</th>
            </tr>
          <% if @mood.present? %>　　<!-- undefin method　'mood' nil:NillClassエラーを解消するため。nilであった場合に実行しないようにする。-->
              <tr>
                <td><%= @mood.mood%></td>
              </tr>
          </table>
          <% end %>

    <!-- エントリを入力するための入力フォーム -->
    <h3 style="margin-left: 100px;">エントリーの仕方</h3>
    <%= form_for @newManner, :url => boards_createManner_path do |f| %>
      <div class="form-inline">
        <%= f.text_field :entry, class: "form-control mb-2 mr-sm-2" %>
        <%= f.hidden_field :board_id %>
        <%= f.submit "投稿", class: "btn btn-primary mb-2" %>
      </div>
    <% end %>

    <!-- エントリを出力するためのテーブル -->
      <table class="table table-bordered">
        <tr>
          <th>エントリーの仕方</th>
          <th>エントリー場所の写真</th>
        </tr>

        <% @manner.each do |manner| %>
          <tr>
            <td><%= manner.entry %></td>
            <td>
            <% @photo.where(manner_id: manner.id).each do |d| %>
                <%= image_tag d.image.url if d.image? %>
            <% end %>
            <%= form_for Photo.new(:manner_id => manner.id), :url => photo_create_path do |f| %>
              <%= f.file_field :image %>
              <%= f.hidden_field :manner_id %>
              <%= f.submit "写真を投稿する!", class: "btn btn-primary mb-2" %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    <p>
      <%= link_to "戻る", board_path(@board.user_id) %>
    </p>
  </div>
  </body>
</html>
