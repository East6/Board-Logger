<html>
  <head>
    <title>サーフポイント一覧</title>
  </head>

  <body>
    <div class="jumbotron mt-4">
      <h1>サーフポイント一覧</h1>
    </div>

    <div class="box11">
      <h1 style="margin-left: 100px">サーフポイントの作成</h1>
      <%= form_for(@newBoard, :url => {:action => 'create'}) do |f| %>
        <div class="form-inline">
          <%= f.text_field :location, class: "form-control mb-2 mr-sm-2" %>
          <%= f.submit "サーフポイントの作成", class: "btn btn-primary mb-2" %>
        </div>
      <% end %>

      <ul class="list-group" style="max-width: 300px;">
        <% @boards.each do |boards| %>
        <li class="list-group-item">
          ・<%= link_to boards.location, boards_show_path(boards.id), style: "margin-left: 15px" %>
        </li>
        <% end %>
      </ul>
    </div>
  </body>
</html>
