<html>
  <head>
    <title>サーフポイント一覧</title>
    <%= stylesheet_link_tag "boards", :media => "all" %>
  </head>

  <body>
    <div class="jumbotron mt-4">
      <h1>サーフポイント一覧</h1>
    </div>

    <div class="box11">
      <% if @user  == current_user %>
        <!-- Sign in, Log in に成功したらでるメッセージ -->
        <p><% flash[:success] %></p>

        <div class = "showPC"><!--PCの画面とスマホの画面を分けたいから-->
          <h1> <%= @user.name %> さんのページ </h1>
          <% if @user == current_user %>
            <h1>サーフポイントの作成</h1>
          <% end %>
        </div>

        <% if @user == current_user %>
          <%= form_for(@newBoard, :url => {:action => 'create'}) do |f| %>
            <div class="form-inline">
              <%= f.text_field :location, class: "form-control mb-2 mr-sm-2 input-lg" %>
              <%= f.hidden_field :user_id %>
              <%= f.submit "サーフポイントの作成", class: "btn btn-primary mb-2 btn-lg" %>
            </div>
          <% end %>
        <% end %>

        <ul class="list-group" style="max-width: 300px;">
          <!--<ul class="list-group"> -->
          <% @boards.each do |boards| %>
            <li class="list-group-item">
              <% if @user == current_user %>
                <%= link_to boards.location, boards_show_path(boards.id), style: "margin-left: 15px" %>
                <%= form_for(boards, url: boards_search_path, html: {method: "get"}) do %>
                  <%= hidden_field_tag :board_id, boards.id %>
                  <%= submit_tag '共有するユーザの選択へ' %>
                <% end %>
                <%= link_to "削除する", boards, method: :delete, class: "btn btn-danger mb-2 btn-sm", data: {confirm: "本当に削除しますか？"}%>
              <% end %>
            </li>
          <% end %>
        </ul>

        <% if @user == current_user and Middle.find_by(user_id: current_user.id) %>
          <h1 style="padding-left: 100px">共有されているポイント</h1>
          <ul class="list-group" style="max-width: 300px;">
            <% @middle.each do |middle| %>
              <li class="list-group-item">
                <%= link_to middle.board.location, boards_show_path(middle.board.id) %>
              </li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
  </body>
</html>