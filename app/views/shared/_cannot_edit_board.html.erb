<div class="container-fluid"> <!--Bootstrapのグリッドシステムの対象範囲-->
  <div class="box11">
    <h1><%= @board.location %></h1>

    <h3>波情報</h3>
    <!-- 波情報を出力するためのテーブル -->
    <% @wave.each do |wave| %>
      <table class="table table-striped">
        <caption align="left"><h3><%= wave.created_at.strftime("%Y年%-m月%-d日") %></h3></caption>
        <tbody>
          <tr>
            <th>サイズ</th>
            <td><%= wave.status %></td>
          </tr>
          <tr>
            <th>風向き</th>
            <td><%= wave.windway %></td>
          </tr>
          <tr>
            <th>何ショア</th>
            <td><%= wave.shore %></td>
          </tr>
          <tr>
            <th>風速</th>
            <td><%= wave.windpower %></td>
          </tr>
          <tr>
            <th>うねりのサイズ</th>
            <td><%= wave.swell %></td>
          </tr>
          <tr>
            <th>うねりの向き</th>
            <td><%= wave.swellway %></td>
          </tr>
          <tr>
            <th>ブレイクの種類</th>
            <td><%= wave.bottom %></td>
          </tr>
          <tr>
            <th>コメント</th>
            <td colspan="7"><%= wave.comment %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    <%= paginate @wave %>


    <h3>サーフポイントの雰囲気</h3>
    <!-- サーフポイントの雰囲気を出力するためのテーブル -->
    <table class="table table-striped">
      <% if @mood.present? %>　　<!-- undefin method　'mood' nil:NillClassエラーを解消するため。nilであった場合に実行しないようにする。-->
        <tr>
          <td><%= @mood.mood%></td>
        </tr>
      <% end %>
    </table>

    <h3>エントリーの仕方</h3>
    <!-- エントリを出力するためのテーブル -->
    <table class="table table-striped">
      <% @manner.each do |manner| %>
        <tr>
          <td><%= manner.entry %></td>
        </tr>
      <% end %>
    </table>
    <p>
      <%= link_to "戻る", board_path %>
    </p>
  </div>
</div><!--Bootstrapのグリッドシステムの対象範囲-->
