<html>
    <head>
    <!--scssを読み込む-->
    <%= stylesheet_link_tag "explain", :media => "all" %>
    </head>

    <body>
    <!--
        <%= link_to "Home画面へ", root_path %>
    -->

        <div class="NAMI_LOG">
<!--            <h1>NAMI LOG</h1>-->
          <%= image_tag "icon.png", :size => "200x40" %>
          <h2>サーファーのための記録アプリ</h2>
        </div>

        <!--NAMILOG のユーザにとっての価値-->
        <div class="Value_NAMILOG">
          <h1>NAMI LOGとは？</h1>

          <div class="box12">
            <h2>サーフポイントに対して</h2>
            <h3><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> 波情報を見返したい</h3>
            <h3><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> 迷わずに行きたい</h3>
            <h3><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> 仲間内で共有したい</h3>
          </div>
          <h2>という、<br>サーファーの気持ちを叶えます。</h2>
        </div>

        <!--下に行けるよマーク(下には使い方があると示す)-->
        <span class="glyphicon glyphicon-chevron-down" id="arrow_bottom1" aria-hidden="true"  ></span>
        <span class="glyphicon glyphicon-chevron-down" id="arrow_bottom2" aria-hidden="true" ></span>
        <div class="Explain_arrow_bottom">
        <h3>使い方</h3>
        </div>


        <!--ここから下は使い方を載せる-->
        
        <!--横線-->
        <HR align=center SIZE=2 width="100%">
        <!--説明1-->
        <div class ="explain">
            <!--説明1の説明文-->
            <h3>サーフポイントの波情報を記録</h3>
            <!--説明1の画像-->
            <%= image_tag "explain_App/HowTo_EntryPlace.png"%>
            <br>
        </div>

        <!--横線-->
        <HR align=center SIZE=2 width="100%">
        <!--説明2-->
        <div class ="explain">
            <!--説明2の説明文-->
            <h3>サーフポイントの波情報を記録</h3>
            <!--説明2の画像-->
            <%= image_tag "explain_App/HowTo_WaveInfo.png"%>
        </div>

        <!--横線-->
        <HR align=center SIZE=2 width="100%">
        <!--説明3-->
        <div class ="explain">
            <!--説明3の説明文-->
            <h3>共有したいサーファーと，<br>エントリー情報を共有できる</h3>
            <!--説明3の画像-->
            <%= image_tag "explain_App/HowTo_Share.png"%>
        </div>
        <!--横線-->
        <HR align=center SIZE=2 width="100%">

        <% if logged_in?%><!--ログインしていたら表示する-->
            <%= link_to "ポイントリストに戻る", root_path, class: "btn btn-info " %>
        <% end %>
        <% unless logged_in? %><!--ログインされていいなかったら表示する-->
            <div class = "Button"><!--ボタンを中央揃えにするために-->
                <!--SignUpボタン-->
                <%= link_to "Sign up", new_user_path, class: "btn btn-info " , id:"SignUp" %>
            </div>
        <% end %>


    </body>

</html>